<div class="container p-2">
<h1 class="text-center text-light bg-dark mb-5 p-2">Listing articles</h1>
 
<table class="table table-striped" >
<thead>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Actions</th>
  </tr>
 </thead>
 <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class:"btn btn-outline-info btn-sm"%>
      <%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-secondary btn-sm"%>
      <%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to 'New article', new_article_path, class:"btn btn-outline-primary btn-lg" %>

</div>